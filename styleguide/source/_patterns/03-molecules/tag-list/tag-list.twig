<div class="tag-list">
  <span class="tag-list__title">Categories:</span>
  <ul class="tag-list__list">
    {% for tag in tags %}
      {% if loop.last %}
      <li class="tag-list__item"><a class="tag" href="{{tag.url}}">{{tag.text}}</a></li>
      {% else %}
      <li class="tag-list__item"><a class="tag" href="{{tag.url}}">{{tag.text|trim}}</a>, </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
