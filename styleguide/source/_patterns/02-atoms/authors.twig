{% for author in authors %}
  {% if loop.length == 1 %}
    {{ author }}
  {% elseif loop.length == 2 %}
    {% if loop.last %}
    and {{ author}}
    {% else %}
      {{ author }} 
    {% endif %}
  {% else %}   
    {% if loop.last %}
      and {{ author }}
    {% else %}
      {{ author }}, 
    {% endif %}
  {% endif %}
{% endfor %}
