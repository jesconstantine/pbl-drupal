{% if orientation == 'left' %}
  {% set class = 'align-left' %}
{% elseif orientation == 'right' %}
  {% set class = 'align-right' %}
{% elseif orientation == 'full' %}
  {% set class = 'align-center' %}
{% else %}

{% endif %}

{% if caption %}
<figure class="{{class}}">
  {% include '@atoms/05-images/image.twig' %}
  {% if caption %}
  <figcaption>
    {{ caption }}
  </figcaption>
  {% endif %}
</figure>
{% else %}
  <img class="{{class}}" src="{{src}}" alt="{{alt}}"/>
{% endif %}
