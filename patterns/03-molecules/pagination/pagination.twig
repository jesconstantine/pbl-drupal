<nav class="pager" role="navigation" aria-labelledby="pagination-heading">
  <h4 id="pagination-heading" class="visually-hidden">Pagination</h4>
  <ul class="pager__items js-pager__items">
    <li class="pager__item pager__item--first">
      <a href="#" title="Go to first page"><span class="visually-hidden">First page</span><span aria-hidden="true">First</span>
      </a>
    </li>
    <li class="pager__item pager__item--prev">
      <a href="#" title="Go to previous page" rel="next"><span class="visually-hidden">Previous page</span><span aria-hidden="true">{% include "icon-chevron.svg" %}</span>
      </a>
    </li>
    {% for page in pages %}
    <li class="pager__item {% if page.active %}is-active{% endif %}">
      <a href="{{page.url}}" title="{% if page.active %}Current Page{% else %}Go to page {{page.number}}{% endif %}"><span class="visually-hidden">{% if page.active %}Current Page{% else %}{{page.number}}{% endif %}</span>{{page.number}}</a>
    </li>
    {% endfor %}
    <li class="pager__item pager__item--next">
      <a href="#" title="Go to next page" rel="next"><span class="visually-hidden">Next page</span><span aria-hidden="true">{% include "icon-chevron.svg" %}</span>
      </a>
    </li>
    <li class="pager__item pager__item--last">
      <a href="#" title="Go to last page"><span class="visually-hidden">Last page</span><span aria-hidden="true">Last</span>
      </a>
    </li>
  </ul>
</nav>
